<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basic_operation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zyyoona7.customviewsets.basic_operation.BasicOperationActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zyyoona7.customviewsets.basic_operation.CustomBasicOpView
                android:layout_width="match_parent"
                android:layout_height="1100dp" />
        </LinearLayout>
    </ScrollView>

    <com.zyyoona7.customviewsets.basic_operation.CustomCoordinateSystem
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
