<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yanzhenjie.swiperecyclerview">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.AllMenuActivity"
            android:label="两侧菜单" />
        <activity
            android:name=".activity.ViewTypeMenuActivity"
            android:label="ViewType菜单" />
        <activity
            android:name=".activity.ViewPagerMenuActivity"
            android:label="和ViewPager嵌套" />
        <activity
            android:name=".activity.RefreshLoadMoreActivity"
            android:label="下拉刷新，加载更多" />
        <activity
            android:name=".activity.ListDragMenuActivity"
            android:label="拖拽Item条目+菜单(List)" />
        <activity
            android:name=".activity.GridDragMenuActivity"
            android:label="拖拽Item条目+菜单(Grid)" />
        <activity
            android:name=".activity.ListDragSwipeActivity"
            android:label="滑动直接删除+拖拽Item条目" />
        <activity
            android:name=".activity.DragSwipeFlagsActivity"
            android:label="指定Item不能拖拽/滑动删除" />
        <activity
            android:name=".activity.VerticalMenuActivity"
            android:label="竖型菜单" />
        <activity
            android:name=".activity.DefineActivity"
            android:label="用SwipeMenuLayout实现你自己的侧滑" />
    </application>

</manifest>